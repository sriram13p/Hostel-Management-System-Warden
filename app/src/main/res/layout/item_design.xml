<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_design"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="28dp"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:background="#D6EBFA"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/permssionform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="180030273"
                        android:id="@+id/sid"
                        android:textColor="@color/red"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="6dp"
                        android:textSize="20dp" />


                    <ProgressBar
                        android:layout_toRightOf="@+id/sid"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="110dp"
                        android:id="@+id/proitem"
                        android:visibility="gone"
                        />
                    </RelativeLayout>

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Reason" />

                    <TextView
                        android:id="@+id/eintime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="ExpInTime" />
                    <TextView
                        android:id="@+id/eouttime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="ExpOutTime" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/correct"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Accept"
                            android:textSize="6sp"
                            />


                        <Button
                            android:id="@+id/wrong"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="6sp"
                            android:text="Deny" />

                        <Button
                            android:id="@+id/call"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="6sp"
                            android:text="Call" />

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>